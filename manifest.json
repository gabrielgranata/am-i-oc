{
    "name": "stonks",
    "version": "1.0",
    "description": "a stock market price alert extension",
    "permissions": [
        "management", 
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "public/images/logo16.png",
            "32": "public/images/logo32.png",
            "48": "public/images/logo48.png",
            "128": "public/images/logo128.png"
        }
    },
    "icons": {
        "16": "public/images/logo16.png",
        "32": "public/images/logo32.png",
        "48": "public/images/logo48.png",
        "128": "public/images/logo128.png"
    },
    "manifest_version": 2
}